        <div class='complete_the_look_variants'>
        {% assign acitveAssigned = true %}
          {% if product.variants.size > 1 %}
            {% for variant in product.variants %}
              {% if variant.title != 'Default Title'%}
                <a class='product-variant {% if variant.available %}{% if acitveAssigned != true %}active{% assign acitveAssigned = true %}{% endif %}{% else %}out-of-stock{% endif %}' href='#' data-variantId='{{ variant.id }}'>{{ variant.title }}</a>
              {% endif %}
            {% endfor %}
          {% endif %}
        </div>
         {% for variant in product.variants %}
              {% if variant.available %}
                {% assign availableVariant = variant %}
                {% break %}
              {% endif %}
            {% endfor %}
        <button class='btn completeTheLookBtn' type='button' data-productId="{{ product.id }}" data-product-variant-id={{ availableVariant.id }}>Add</button>
      {% endif %}
    
      {%- if use_horizontal -%}
        <a href="{{ product.url | within: collection }}" class="ProductItem__ViewButton Button Button--secondary">{{ 'collection.product.view_product' | t }}</a>
      {%- endif -%}
    </div>
    
    
  {% endif %}
