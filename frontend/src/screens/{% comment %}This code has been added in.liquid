{% comment %}This code has been added in order to render a few products only for wholesale applications and not for regular users{% endcomment %}
{% if product.tags contains 'b2bgottex'  %}
  {% if customer.tags contains 'b2b' %}
     <div class="ProductItem {% if use_horizontal %}ProductItem--horizontal{% endif %} {% if slidingImages %}splideEnabledItem{% endif %} {% if offLimits %}offLimits{% endif %}">
      <div  class="ProductItem__Wrapper">
        {%- comment -%}
        We are using LazySizes to efficiently choose the most appropriate image in the set. However, because internally LazySizes uses srcset, we need to make
        sure that the image sizes we offer is not larger than the max size uploaded by the merchants.
        {%- endcomment -%}
    
        {%- if settings.product_image_size == 'natural' or use_horizontal -%}
          {%- assign use_natural_size = true -%}
        {%- else -%}
          {%- assign use_natural_size = false -%}
        {%- endif -%}
    
        {%- if settings.product_show_secondary_image and product.media[1] != blank and use_horizontal != true -%}
          {%- assign has_alternate_image = true -%}
        {%- else -%}
          {%- assign has_alternate_image = false -%}
        {%- endif -%}
        <a href="{{ product.url | within: collection }}" class="ProductItem__ImageWrapper collection-product-{{ product.id }} {% if has_alternate_image %}ProductItem__ImageWrapper--withAlternateImage{% endif %} {% if slidingImages %}slidingImages{% endif %}">
          <!-- Moved Label Tag -->
              
          {%- if show_labels -%}
          {%- assign final_sale_tag = false -%}
          {%- capture product_labels -%}
            {% comment %} <!--Deactivating Final sale for store wide discount: -->
            {%- for tag in product.tags -%}
        	  {%- if tag contains 'FINAL-SALE' -%}
              	{%- assign final_sale_tag = true -%}
        		<span class="ProductItem__Label Heading Text--subdued final-sale-product-item">FINAL SALE</span>
        	  {%- endif -%}
              {%- if tag contains '__label' -%}
                <span class="ProductItem__Label Heading Text--subdued">{{ tag | split: '__label:' | last }}</span>
                {%- break -%}
              {%- endif -%}
            {%- endfor -%}
          {% endcomment %}
    
            {%- if product.available -%}
            {% comment %} <!--Store wide discount (removed : and final_sale_tag == false from if clause below)-->{% endcomment %}
            {% unless customer.tags contains 'b2b' %}
              {%- if product.compare_at_price > product.price -%}
                {% assign floatCompareAtPrice = product.compare_at_price | times: 1.0 %}
                {% assign discountPercentage = product.price | divided_by: floatCompareAtPrice %}
                {% assign discountPercentage = 1 | minus: discountPercentage %}
                {% assign discountPercentage = discountPercentage | times: 100 %}
                {% comment %}
                <span class="ProductItem__Label ProductItem__Label--onSale Heading Text--subdued">{{ 'product.labels.on_sale' | t }}</span>
                {% endcomment %}
                <span class="ProductItem__Label ProductItem__Label--onSale custom-sale-tag">{{ discountPercentage | round }}% Off</span>
              {%- endif -%}
            {% endunless %}
              
            {%- else -%}
              {% comment %}<span class="ProductItem__Label ProductItem__Label--soldOut Heading Text--subdued custom-sale-tag unavailableProductTag">{{ 'product.labels.sold_out' | t }}</span>{% endcomment %}
              <span class="ProductItem__Label ProductItem__Label--soldOut Heading Text--subdued custom-sale-tag unavailableProductTag">OUT OF STOCK</span>
            {%- endif -%}
          {%- endcapture -%}
    
          {%- if product_labels != blank -%}
            <div class="ProductItem__LabelList {% if discountPercentage or product.available == false %}customSaleTagContainer{% endif %} {% if customer.tags contains 'b2b' %}noSaleTagUser{% endif %}">
              {{ product_labels }}
            </div>
          {%- endif -%}
        {%- endif -%}
        <!-- Moved Label Tag End -->
          
          {%- if use_horizontal -%}
            {%- assign max_width = 125 -%}
          {%- else -%}
            {%- assign max_width = product.featured_media.preview_image.width -%}
          {%- endif -%}
    
          {%- assign media_aspect_ratio = product.featured_media.aspect_ratio | default: product.featured_media.preview_image.aspect_ratio -%}
           <div class="{% if slidingImages == null %}AspectRatio AspectRatio--{% if use_natural_size %}withFallback{% else %}{{ settings.product_image_size }}{% endif %}{% endif %}" style="max-width: {{ max_width }}px; {% if use_natural_size %}padding-bottom: {{ 100.0 | divided_by: media_aspect_ratio }}%;{% endif %} --aspect-ratio: {{ media_aspect_ratio }}">
            {% if slidingImages == null %}
              {%- comment -%}
              IMPLEMENTATION NOTE: The alternate image (not visible by default) should be the first in the DOM, as the spinner (Image__Loader element) is
              displayed based on the immediately previously shown image.
              {%- endcomment -%}
      
              {%- if has_alternate_image -%}
                {%- capture supported_sizes -%}{%- render 'image-size', sizes: '200,300,400,600,800,900,1000,1200', image: product.media[1] -%}{%- endcapture -%}
      
                {%- assign image_url = product.media[1] | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
      
                <img class="ProductItem__Image ProductItem__Image--alternate Image--lazyLoad Image--fadeIn" data-src="{{ image_url }}" data-widths="[{{ supported_sizes }}]" data-sizes="auto" alt="{{ product.media[1].alt | escape }}" data-media-id="{{ product.media[1].id }}">
              {%- endif -%}
      
              {%- capture supported_sizes -%}{%- render 'image-size', sizes: '200,400,600,700,800,900,1000,1200', image: product.featured_media -%}{%- endcapture -%}
              {%- assign image_url = product.featured_media | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
      
              <img class="ProductItem__Image Image--lazyLoad Image--fadeIn" data-src="{{ image_url }}" data-widths="[{{ supported_sizes }}]" data-sizes="auto" alt="{{ product.featured_media.alt | escape }}" data-media-id="{{ product.featured_media.id }}">
              <span class="Image__Loader"></span>
              <noscript>
                <img class="ProductItem__Image ProductItem__Image--alternate" src="{{ product.media[1] | img_url: '600x' }}" alt="{{ product.media[1].alt | escape }}">
                <img class="ProductItem__Image" src="{{ product.featured_media| img_url: '600x' }}" alt="{{ product.featured_media.alt | escape }}">
              </noscript>
    
              <div class='mobile-quick-add' data-product-handle='{{ product.handle }}'>
                <img src='{{ 'QuickAdd.png' | asset_img_url:'84x85' }}' alt='Quick Add To Cart'>
              </div>
    
              <ul class="product-{{ product.id }}-sizes collection-product__sizes collection-product__sizes--desktop">
                {% if settings.storeWideDiscount %}
                  <span class='red-sale'>{{ settings.storeWideDiscountText }}</span>
                {% endif %}
              {% if product.variants.size > 1 and product.options[0] == 'Size' and product.options.size == 1 %}
                {% for variant in product.variants %}
                  <li data-product-Id="{{ product.id }}" data-product-variant-id="{{ variant.id }}" class="collection-product__size {% unless variant.available %}collection-product__size--unavailable{% endunless %}">
                    {{ variant.title }}
                  </li>
                {% endfor %}
              {% elsif product.variants.size == 1 %}
                  <li data-product-Id="{{ product.id }}" data-product-variant-id="{{ product.variants[0].id }}" class="collection-product__size collection-product__size--oneSize {% unless product.variants[0].available %}collection-product__size--unavailable{% endunless %}">
                    {% if product.variants[0].title == 'Default Title' %}
                      One Size
                    {% else %}
                      {{ product.variants[0].title }}
                    {% endif %}
                  </li>
              {% endif %}
              </ul>
            {% else %}
                <section id="image-carousel-{{ product.id }}" class="splide" aria-label="Product Images">
                  <div class="splide__track">
                        <ul class="splide__list">
                          {% for image in product.media limit:3 %}
                            <li class="splide__slide">
                                {% assign widthString = '_' | append:  image.width | append: 'x.'%}
                                {%- capture supported_sizes -%}{%- render 'image-size', sizes: '200,300,400,600,800,900,1000,1200', image: image -%}{%- endcapture -%}
                                {%- assign image_url = image | img_url: '1x1' | replace: '_1x1.', widthString -%}
                                <img class="ProductItem__Image Image--lazyLoad Image--fadeIn" {% if forloop.index == 1 %}src="{{ image_url }}"{% else %}data-splide-lazy="{{ image_url }}"{% endif %} data-widths="[{{ supported_sizes }}]" data-sizes="auto" alt="{{ product.image.alt | escape }}" data-media-id="{{ product.image.id }}">
                            
                                {% if forloop.index == 1 %}
                                  <span class="Image__Loader"></span>
                                {% endif %}
                            </li>
                          {% endfor %}
                        </ul>
                        <div class='mobile-quick-add' data-product-handle='{{ product.handle }}'>
                          <img src='{{ 'QuickAdd.png' | asset_img_url:'84x85' }}' alt='Quick Add To Cart'>
                        </div>
                  </div>
                    <ul class="product-{{ product.id }}-sizes collection-product__sizes collection-product__sizes--desktop">
