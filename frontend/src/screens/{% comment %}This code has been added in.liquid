                        <li data-product-Id="{{ product.id }}" data-product-variant-id="{{ variant.id }}" class="collection-product__size {% unless variant.available %}collection-product__size--unavailable{% endunless %}">
                          {{ variant.title }}
                        </li>
                      {% endfor %}
                    {% else %}
                        <li data-product-Id="{{ product.id }}" data-product-variant-id="{{ product.variants[0].id }}" class="collection-product__size collection-product__size--oneSize {% unless product.variants[0].available %}collection-product__size--unavailable{% endunless %}">
                          {% if product.variants[0].title == 'Default Title' %}
                            One Size
                          {% else %}
                            {{ product.variants[0].title }}
                          {% endif %}
                        </li>
                    {% endif %}
                    </ul>
                </section>
            {% endif %}
          </div>
